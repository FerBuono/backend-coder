<h1 class="title">Productos</h1>
<% if(productos.length == 0) { %>
    <h2>No se encontraron productos</h2>
<% } else { %>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach((producto)=> { %>
                <tr>
                    <td><%= producto.id %></td>
                    <td><%= producto.title %></td>
                    <td>$<%= producto.price %></td>
                    <td><img src="<%=producto.thumbnail %>" alt=<%= producto.title %> /></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>