<div class="container table-container">
    <h1 class="title">Productos</h1>
    {{#if productos.length}}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}} 
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{price}}</td>
                        <td><img src="{{thumbnail}}" alt="{{title}}"/></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <h2>No se encontraron productos</h2>
    {{/if}}
</div>
